#include <Arduino.h>
const int inputP = 2;
const int inputQ = 3;
const int inputR = 4;
//const int inputS = 5;
const int outputPin = 13;

void setup() {
  pinMode(inputP, INPUT);
  pinMode(inputQ, INPUT);
  pinMode(inputR, INPUT);
  //pinMode(inputS, INPUT);
  pinMode(outputPin, OUTPUT);
}

void loop() {
  // Read input values
  bool P = digitalRead(inputP);
  bool Q = digitalRead(inputQ);
  bool R = digitalRead(inputR);
 // bool S = digitalRead(inputS);

  // Output logic based on the expression
  bool output = P^(Q+R);

  // Write to the output pin
  digitalWrite(outputPin, output);
}
